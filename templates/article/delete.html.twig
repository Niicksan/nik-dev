{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="" method="POST">
                <fieldset>
                    <legend>Изтрийте вашата обявата</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_title">Заглавие</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_title"
                                   name="article[title]" value="{{ article.title }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_image">Снимка</label>
                        <div class="col-sm-4 ">
                            <input type="file" class="form-control" id="article_image"
                                   name="article[imageFile]" value="{{ article.imageFilename }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="isFound">Изгубен/Намерен</label>
                        <div class="col-sm-4 ">
                            <select class="form-control" name="article[isFound]" id="isFound" disabled>
                                <option value="" selected disabled hidden>{{ article.isFound }}</option>
                                <option value="Изгубен">Изгубен</option>
                                <option value="Намерен">Намерен</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_town">Град</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_town"
                                   name="article[town]" value="{{ article.town }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_phone">Телефон</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_phone"
                                   name="article[phone]" value="{{ article.phone }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_content">Описание</label>
                        <div class="col-sm-4">
                            <textarea class="form-control" rows="6" id="article_content"
                                      name="article[content]" placeholder="Добавете описние" disabled>{{ article.content }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('user_articles') }}">Назад</a>
                            <button type="submit" class="btn btn-danger">Изтрий</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}