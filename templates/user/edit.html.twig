{% extends 'base.html.twig' %}

{% block main  %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="" method="post">
                <fieldset>
                    <legend>Редакция на профила</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_email">Имейл</label>
                        <div class="col-sm-4">
                            <input type="email" class="form-control" id="user_email" placeholder="Email"
                                   name="user[email]" value="{{ user.email }}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_fullName">Име</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_fullName" placeholder="Full Name"
                                   name="user[fullName]" value="{{ user.fullName }}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="password">Текуща парола</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="password" placeholder="Password" name="_password">
                        </div>
                    </div>

                    {{  form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('user_profile') }}">Назад</a>
                            <button type="submit" class="btn btn-success">Редактирай</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}