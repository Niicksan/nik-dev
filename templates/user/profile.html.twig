{% extends 'base.html.twig' %}

{% block body_id 'profile' %}

{% block main %}
    <div class="container body-content span=12 offset=8">
        <div class="well form-horizontal">
            <fieldset>
                <legend class="col-sm-pull-2">Моят профил</legend>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="article_title">Имейл</label>
                    <div class="col-sm-2 ">
                        <p>{{ user.email }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="article_title">Име</label>
                    <div class="col-sm-2 ">
                        <p>{{ user.fullName }}</p>
                    </div>
                </div>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-success btn-xs"
                           href="{{ path('user_edit', {'id': user.id}) }}">Редактирай  &raquo;</a>
                    </div>
                </footer>
            </fieldset>
        </div>
    </div>
{% endblock %}