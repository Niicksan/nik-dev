{#
This is the base template used as the application layout which contains the
common elements and decorates all the other templates.
See http://symfony.com/doc/current/book/templating.html#template-inheritance-and-layouts
#}
<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}PetFind.Me{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/index.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css') }}">
        <link rel="stylesheet" href="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0-14/css/all.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body id="{% block body_id %}{% endblock %}">

<div class="wrapper">
    {% block header %}
        <header>
            <div class="navbar navbar-default navbar-static-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <a href="{{ path('home_index') }}" class="navbar-brand">PetFind.Me</a>
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            {% if app.user %}
                                <li>
                                    <a href="{#  {{ path('home_lost') }} #}">
                                        Изгубени
                                    </a>
                                </li>
                                <li>
                                    <a href="{# {{ path('home_found') }} #}">
                                        Намерени
                                    </a>
                                </li>
                                <li>
                                    <a href="{# {{ path('article_create') }} #}">
                                        Добави обява
                                    </a>
                                </li>
                                <li>
                                    <a href="{# {{ path('user_articles') }} #}">
                                        Моите обяви
                                    </a>
                                </li>
                                <li>
                                    <a href="{# {{ path('user_profile') }} #}">
                                        Моят профил
                                    </a>
                                </li>
                                <li>
                                    <a href="{# {{ path('security_logout') }} #}">
                                        Излез
                                    </a>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{# {{ path('home_lost') }} #}">
                                        Изгубени
                                    </a>
                                </li>
                                <li>
                                    <a href="{# {{ path('home_found') }} #}">
                                        Намерени
                                    </a>
                                </li>
                                <li>
                                    <a href="{# {{ path('article_create') }} #}">
                                        Добави обява
                                    </a>
                                </li>
                                <li>
                                    <a href="{# {{ path('user_register') }} #}">
                                        Регистрация
                                    </a>
                                </li>
                                <li>
                                    <a href="{# {{ path('security_login') }} #}">
                                        Вход
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </header>
    {% endblock %}

    {% block body %}
        {% block main %}{% endblock %}
    {% endblock %}

    {% block footer %}
        <footer class="footer">
            <section class="container top ">
                <div class="about bottom-line">
                    <h4>Информация</h4>
                    <ul>
                        <a href="{#  {{ path('home_about') }} #}"><li><i class="fas fa-info-circle"></i> За нас</li></a>
                        <a href="{# {{ path('home_contacts') }}#}"><li><i class="fas fa-question-circle"></i> Помощ</li></a>
                    </ul>
                </div>
                <div class="social bottom-line">
                    <h4>Последвайте ни</h4>
                    <ul>
                        <a href="https://www.instagram.com/" class="instagram"><li><i class="fab fa-instagram instagram"></i class="instagram"> Instagram</li></a>
                        <a href="https://twitter.com/" class="twitter" ><li><i class="fab fa-twitter twitter"></i> Twitter</li></a>
                        <a href="https://facebook.com" class="facebook"><li><i class="fab fa-facebook-square facebook"></i> Facebook</li></a>
                    </ul>
                </div>

                <div class="contact bottom-line">
                    <h4>Връзка с нас</h4>
                    <ul>
                        <a href="{# {{ path('home_contacts') }} #}">
                            <li><i class="fas fa-envelope"></i> Емейл: petfind@me.bg</li>
                        </a>
                        <li><i class="fa fa-phone-alt"></i> Телефон: 0888888888</li>
                        <li><i class="fas fa-map-marker-alt"></i> Адрес: София бул. Академик 57</li>
                    </ul>
                </div>
            </section>

            <section class="bottom">
                <p>&#169; PetFind.Me All Rights Reserved 2020</p>
            </section>
        </footer>
    {% endblock %}
</div>

{% block javascripts %}
    <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('js/moment.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
{% endblock %}

</body>
</html>